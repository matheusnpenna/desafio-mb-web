{
  "name": "desafio-mb-web",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node ./src/server/server.js",
    "server:serve": "cross-env NODE_ENV=development nodemon ./src/server/server.js",
    "frontend:dev": "cd src/frontend && yarn dev",
    "frontend:build": "cd src/frontend && yarn build && cd ../../",
    "preview": "cd src/frontend && yarn build && cd ../../ && cross-env NODE_ENV=development nodemon ./src/server/server.js",
    "setup": "yarn install && cd src/frontend && yarn install && cd ../../",
    "frontend:test:unit":  "cd src/frontend && yarn test:unit",
    "frontend:test:e2e":  "cd src/frontend && yarn test:e2e",
    "frontend:test:e2e:dev": "cd src/frontend && yarn test:e2e:dev"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.0"
  }
}
